<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout style="@style/usercenter_header_llbkg">

        <ImageView
            android:id="@+id/register_back"
            style="@style/usercenter_header_ivback" />

        <TextView
            style="@style/usercenter_header_title"
            android:text="注册" />
    </LinearLayout>

    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:background="@null"
        android:hint="给自己起个个性的昵称吧"
        android:drawableLeft="@mipmap/zhuce_nickname_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_nickname"/>
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:background="@null"
        android:hint="填写11位手机号，其他用户不可见"
        android:drawableLeft="@mipmap/zhuce_shouji_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_phonenumber"/>
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center_vertical">
            <EditText
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:background="@null"
                android:hint="手机验证码"
                android:drawableLeft="@mipmap/zhuce_shouji_yanzheng"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/register_et_yanzhengma"/>

            <Button

                android:gravity="center"
                android:id="@+id/register_btn_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@mipmap/green_back"
                android:layout_marginRight="30dp"
                android:text="获取验证码"
                android:textColor="#fff" />
        </LinearLayout>




    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!--<EditText-->
    <!--android:id="@+id/et_register_pwd"-->
    <!--android:inputType="textPassword"-->
    <!--android:maxLength="16"-->
    <!--android:maxLines="1"-->
    <!--android:padding="7dp"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:drawablePadding="15dp"-->
    <!--android:background="@null"-->
    <!--android:hint="6-14个字母或数字，不允许出现"-->
    <!--android:drawableLeft="@mipmap/zhuce_mima_icon"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <EditText
            android:id="@+id/et_register_pwd"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:padding="7dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:background="@null"
            android:hint="6-14个字母或数字，不允许出现空格"
            android:drawableLeft="@mipmap/zhuce_mima_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/iv_register_pwdlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@mipmap/zhuce_mima_bukejian"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:background="@null"
        android:hint="推荐码（选填）"
        android:drawableLeft="@mipmap/zhuce_tuijian_ma_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <CheckBox

        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:background="@null"
        android:textSize="18sp"
        android:textColor="#2c831f"
        android:text="阅读并接受协议"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@mipmap/fasong_back"
        android:textSize="18sp"
        android:text="注册"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"/>
</LinearLayout>
